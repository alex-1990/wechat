.home{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
.homeBg{
  width: 100%;
  height: 100%;
}
.homeMain{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
.homeBanner{
  width: 100%;
  height: 100%;
}
.homeMeun{
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  display: flex;
  align-content: center;
}
.homeMeun>view{
  display: flex;
  flex-direction: column;
  align-content: center;
  text-align: center;
}
.homeMeun>view>span{
  color: #806458;
  font-size: 16rpx;
  margin-top: 20rpx;
}
.homeMeun_rule{
  margin-right: 44rpx;
}
.homeMeun_rule_img{
  width: 30rpx;
  height: 32rpx;
}
.homeMeun_order_img{
  width: 32rpx;
  height: 32rpx;
}
.homeBtn{
  width: 100%;
  position: absolute;
  bottom: 50rpx;
  left: 0;
  text-align: center;
}
.homeBtn>.tip{
    border-radius: 19rpx;
    background-color: rgb(128, 100, 88);
    opacity: 0.659;
    box-shadow: 0rpx 7rpx 25rpx 0rpx rgba(158, 129, 116, 0.5);
    width: 143rpx;
    height: 38rpx;
    font-size: 26rpx;
    color: #fff;
    line-height: 38rpx;
    padding: 0;
    margin-bottom: 20rpx;
}
.homeBtn>.btn{
    background-color: rgb(128, 100, 88);
    box-shadow: 0rpx 7rpx 25rpx 0rpx rgba(158, 129, 116, 0.5);
    width: 550rpx;
    height: 90rpx;
    border-radius: 90rpx;
    color: #fff;
    font-size: 34rpx;
    margin-bottom: 50rpx;
}
.homeBtn>.homeLogo{
  width: 114rpx;
  height: 89rpx;
  margin-bottom: 20rpx;
}

.homeBtn>.word{
  font-size: 12rpx;
  color: #7a6458;
  text-align: center;
}
/*模态框*/
.modals{
  position:fixed; 
  z-index: 999; 
  top:0; 
  left: 0; 
  right:0; 
  bottom: 0;
}
.modals-cancel{
  position:absolute; 
  z-index:1000; 
  top:0; 
  left: 0; 
  right:0; 
  bottom: 0; 
  /* background-color: rgba(0,0,0,.5); */
}
.bottom-dialog-body{
  position:absolute; 
  z-index:10001; 
  top:50%; 
  left:50%; 
  right:0; 
  width: 578rpx;
  height: 569rpx;
  margin-left: -289rpx;
  opacity: 0;
}
.bottom-dialog-body>image{
  width: 578rpx;
  height: 569rpx;
}
/*动画前初始位置*/
.bottom-pos{
  -webkit-transform:translateY(-100%);
  transform:translateY(-100%);
}
.bottom-dialog-body>.close{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 60rpx;
  top: 60rpx;
}
