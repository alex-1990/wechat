.takePhotoMain .beimianBtn,.zhengmianBtn{
    width: 418rpx;
    height: 112rpx;
    margin-top: 50rpx;
}
.takePhotoMain .gengduo{
    width: 478rpx;
    height: 112rpx;
}
.takePhotoMain .word{
    color: #cacaca;
    font-size: 26rpx;
}
.takePhotoMain>button {
    background-color: rgb(128, 100, 88);
    box-shadow: 0px 7rpx 25rpx 0px rgba(158, 129, 116, 0.5);
    width: 550rpx;
    height: 90rpx;
    color: #fff;
    border-radius: 90rpx;
}
.cropper{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
}