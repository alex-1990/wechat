.mainViewBox {
  padding: 60rpx 40rpx;
  border-bottom: 1px solid #e3e3e3;
}

.mainViewBox>.h3 {
  font-size: 40rpx;
  color: #363636;
  margin-bottom: 70rpx;
}

.mainViewBox>.table {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mainViewBox>.table>.table_cell {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.mainViewBox>.table>.table_cell>span {
  color: #7e7e7e;
  font-size: 26rpx;
}

.mainViewBox>.table>.table_cell>.round {
  border-radius: 50%;
  width: 216rpx;
  height: 216rpx;
}

.mainViewBox>.table>.table_cell>.round>image {
  width: 216rpx;
  height: 216rpx;
}

.mainViewBox>.table>.table_cell>.round>input {
  position: absolute;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  font-size: 88rpx;
  color: #806458;
  height: auto;
}

.linxing {
  padding: 60rpx 0rpx;
}

.linxing>.h3 {
  padding: 0rpx 40rpx;
}

.mainInput .gender {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.mainInput .gender>span {
  font-size: 22rpx;
  color: #806458;
  background-color: #f0e5d6;
  padding: 0rpx 20rpx;
  border-radius: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}


.modals {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
  visibility: hidden;
  background-color: rgba(0, 0, 0, 0.7);
  -webkit-transition: opacity 0.3s 0s, visibility 0s 0.3s;
  -moz-transition: opacity 0.3s 0s, visibility 0s 0.3s;
  transition: opacity 0.3s 0s, visibility 0s 0.3s;
}

.visible {
  opacity: 1;
  visibility: visible;
  -webkit-transition: opacity 0.3s 0s, visibility 0s 0s;
  -moz-transition: opacity 0.3s 0s, visibility 0s 0s;
  transition: opacity 0.3s 0s, visibility 0s 0s;
}
.modals image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}


.dimensionModal {
  width: 636rpx;
  height: 1004rpx;
    margin: 50rpx auto;
  -webkit-backface-visibility: hidden;
  -webkit-transition: transform 0.3s;
  -moz-transition: transform 0.3s;
  transition: transform 0.3s;
  position: relative;

    display: flex;
  flex-direction: row;
  justify-content: center;

}

.modals .button {
  background-color: rgb(128, 100, 88);
  width: 210rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 30rpx;
  margin: 40rpx auto 0;
  text-align: center;
  color: #fff;
  border-radius: 68rpx;
  position:absolute;
bottom:30rpx;

}

.anim {
  -webkit-transform: scale(1.2);
  transform: scale(1.2);
}

.visible .anim {
  -webkit-transform: scale(1);
  transform: scale(1);
}



