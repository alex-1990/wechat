/* pages/order.wxss */

.container {
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 67rpx;
  margin-bottom: 44rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 4rpx #806458 solid;
  margin-right: 28rpx;
}

.userinfo .info {
  display: flex;
  flex-direction: column;
  align-items: left;
}

.userinfo .score {
  color: #7e7e7e;
  font-size:28rpx
}

.order_title {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #ccc;
  opacity: 0.6;
}

.order_title .status-label {
  width: 150rpx;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #cacaca;
  box-sizing: border-box;
  position: relative;
}

.order_title .status-label.active {
  color: #806458;
}

.order_title .line {
  width: 20rpx;
  height: 3rpx;
  background-color: #806458;
  position: relative;
  top: -20rpx;
}

.order_title .status-label>view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-order {
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 324rpx;
  left: 0;
  right: 0;
  text-align: center;
  padding-top: 203rpx;
  background-color: #f2f2f2;
}

.no-order-img {
  width: 81rpx;
  height: 96rpx;
  margin-bottom: 31rpx;
}

.no-order .text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.order_list {
  width: 100%;
  height: auto;
  background-color: #fefefe;
}

.order_list>view {
  width: 92%;
  height: auto;
  background: #fff;
  margin: 30rpx auto;
  border-radius: 20rpx;
  /* box-shadow:0px 0px 5px  rgba(188, 188, 188, 0.6); */
  box-shadow: 0rpx 7rpx 25rpx 0rpx rgba(158, 129, 116, 0.5);
}

.order_info {
  width: 95%;
  height: 100%;
  margin: 0 auto 0;
  padding-top: 20rpx;
}

.order_info .rel>image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.order_info>view {
  display: inline-block;
  vertical-align: middle;
  overflow: hidden;
}

.order_info>view:nth-child(1) {
  width: 145rpx;
  height: 145rpx;
}

.order_info>view:nth-child(2) {
  margin-left: 2%;
  width: 73%;
  height: 145rpx;
}

.order_info>view:nth-child(3) {
  width: 100%;
  height: 100rpx;
}

.hotel_logo {
  width: 90%;
  height: 180rpx;
  left: 0;
  border-radius: 15rpx;
}

.order_list .info>view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order_list .info>view:nth-child(1) {
  height: 50rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #7e7e7e;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.order_list .info .status {
  color: #ff5d5d;
  font-size: 24rpx;
}

.order_list .info>view:nth-child(2) {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #363636;
}

.order_list .info>view:nth-child(3) {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.order_list .info .money {
  color: #ff5d5d;
}

.order_list .info .score {
  color: #cacaca;
}

.order_list .info>view:nth-child(4) {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
}

.order_state>view {
  width: 100%;
  height: 70rpx;
  margin-top: 20rpx;
}

.order_state>view view {
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  box-sizing: border-box;
}

.order_state .status {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.btn-1 {
  border-radius: 40rpx;
  border: 1rpx solid #ff5d5d;
  width: 181rpx;
  height: 51rpx;
  font-size: 24rpx;
  color: #ff5d5d;
  line-height: 51rpx;
  margin-right: 20rpx;
}

.btn-2 {
  border-radius: 40rpx;
  border: 1rpx solid #806458;
  width: 181rpx;
  height: 51rpx;
  font-size: 24rpx;
  color: #7e7e7e;
  line-height: 51rpx;
  margin-right: 20rpx;
}
